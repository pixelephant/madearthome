<%= link_to t('.cart_link') + ("(" + cart_count.to_s + ")" if !cart_count.nil?).to_s , "/cart", :class => "minicart" + (" empty" if cart_count.nil? ).to_s %>
<% if Cart.exists?(session[:cart_id]) %>
<% cart = Cart.find(session[:cart_id]) %>
	<div id="minicart">
			<% cart.line_items.each do |item| %>
				<div class="row">
					<%= (image_tag item.product.default_photo, :title => item.product.default_photo.alt, :class => "class") if !item.product.default_photo.nil? %>
					<div class="data">
						<span class="title">
							<%= item.product.name %>
						</span>
						<span class="property">Quantity: <%= item.quantity %></span>
						<span class="property">Color: Red</span>
						<span class="property">Anyag: BÅ‘r</span>
					</div>
					<span class="price"><%= item.product.price %></span>
				</div>
			<% end %>
			<div class="row total">
				Total: <span class="total-price"><%= cart.total %></span>
			</div>
			<%= link_to t('.cart_link'), "/cart", :class => "button" %>
	</div>
<% end %>
