<% @products.each_with_index do |product,i| %>
<% cl = i % 3 == 2 ? 'product last' : 'product'%>
<div data-id="<%= product.id %>" class="<%= cl %>">
		<%= link_to product_path(product) do %>
		<div class="image">
			<span class="quicklook">quicklook</span>
				<%= image_tag product.default_photo.image_file.medium, :title => product.default_photo.alt, :class => "class" if !product.default_photo.nil? %>
		</div>
		<div class="clearfix">
			<div class="left">
				<p class="name">
					<%= product.name %>
				</p>
				<%= render 'products/price', :product => product %>
			</div>
			<div class="right">
				<%= image_tag "lz.png", :title => "lazyboy", :class => "class" %>
			</div>
		</div>
	<% end %>
</div>
<% end %>

<section id="product-modal-wrap">
	<!-- keyboard léptetés -->
		<div id="product-modal">
			<a id="modal-prev" class="arrow left" href="#"><%= t('previous') %></a>
			<div class="clearfix">
				<%= render 'products/modal_product' %>
			</div>
			<a id="modal-next" class="arrow right" href="#"><%= t('next') %></a>
		</div>
</section>
