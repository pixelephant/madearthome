<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>SKU:</b>
  <%= @product.sku %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Discounted price:</b>
  <%= productPrice(@product.id) %>
</p>

<p>
  <b>Short description:</b>
  <%= @product.short_description %>
</p>

<p>
  <b>Long description:</b>
  <%= @product.long_description %>
</p>

<h3>Photos:</h3>

<% if @product.photos.any? %>
<div id="picture-wrap">
	<div id="current-picture">
		<a href=<%= @product.default_photo.image_file.to_s %> class='zoomable' rel="gal1">
			<%= image_tag(@product.default_photo.image_file.medium.to_s) %>
		</a>
	</div>
	
	<div id="picture-list">
		<% @product.photos.each do |photo| %>
				<a class="<%= photo.default? ? 'zoomThumbActive' : '' %>" href="#" rel="{gallery: 'gal1', smallimage: '<%=photo.image_file.medium.to_s %>',largeimage: '<%=photo.image_file.to_s%>'}">  
		  			<%= image_tag(photo.image_file.thumb.to_s) %>
				</a>

		<% end %>
	</div>
</div>
<% end %>


<p>
  <b>Category:</b>
  <%= @product.category ? @product.category.name : "" %>
</p>

<h3>Advantages:</h3>
<% @product.advantages.each do |advantage_id| %> 

		<ul>
			<li><%= Advantage.find(advantage_id).advantage %></li>
		</ul>

<% end %>

<% @product.properties.group(:property_category_id).each do |property| %> 
	<h3>Property group: <%= PropertyCategory.find(property.property_category_id).category_name %></h3>

	<% @product.properties.where({:property_category_id => property.property_category_id}).each do |property| %>
		<ul>
			<li><%= property.property_name %></li>
		</ul>
	<% end %>

<% end %>

<h3>Manufacturer</h3>

<% if @product.manufacturer.present? %>
<p>
  <b><%= @product.manufacturer.name %></b><br />
  <%= @product.manufacturer.description %>
</p>
<% else %>
<p>
  <b>No manufacturer</b><br />
</p>
<% end %>

<h3>Designer</h3>

<% if @product.designer.present? %>
<p>
  <b><%= @product.designer.name %></b><br />
  <%= @product.designer.description %>
</p>
<% else %>
<p>
  <b>No designer</b><br />
</p>
<% end %>

<h3>Related Products</h3>
<div id="ca-container" class="ca-container">
	<div class="ca-wrapper">
<% @product.related_products_of.each_with_index do |related_product,i| %>
	<% p = Product.find(related_product.related_product_id) %>
		<div class="ca-item ca-item-<%=i%>">
			<div class="ca-item-main">
				<%= p.photos.any? ? image_tag(p.default_photo.image_file.thumb.to_s) : '' %>
				<h3><%= p.name %></h3>
			</div>
		</div>
<% end %>
	</div><!-- ca-wrapper -->
</div><!-- ca-container -->

	

