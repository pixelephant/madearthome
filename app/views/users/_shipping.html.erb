<form action="#" id="shipping-form">

	<div class="block">
		<h5>Contact information</h5>
		<fieldset>
			<div class="half">
				<label for="contact-title">Titulus</label>
				<input type="text" name="contact-title" id="contact-title" />
			</div>
			<div class="half">
				<label for="contact-firstname">Vezetéknév</label>
				<input type="text" name="contact-firstname" id="contact-firstname" value="{current_user.name}"/>
			</div>
			<div class="half">
				<label for="contact-lastname">Utónév</label>
				<input type="text" name="contact-lastname" id="contact-lastname" />
			</div>
		</fieldset>
		<fieldset>
			<label for="contact-email">Email address</label>
			<input type="email" name="contact-email" id="contact-email" />
		</fieldset>
		<fieldset>
			<label for="contact-phone">Phone number</label>
			<input type="tel" name="contact-phone" id="contact-phone" />
		</fieldset>
	</div>

	<div class="block">
	<h5>Delivery information</h5>
	<fieldset>
			<label for="shipping-name">Company name <small>(not required)</small></label>
			<input type="text" name="shipping-name" id="shipping-name" />
	</fieldset>
	<fieldset>
		<div class="half">
			<label for="shipping-postal">Zip</label>
			<input class="postal" type="text" name="shipping-postal" id="shipping-postal" />
		</div>
		<div class="half">
			<label for="shipping-city">City</label>
			<input type="text" name="shipping-city" id="shipping-city" />
		</div>
	</fieldset>
	<fieldset>
		<label for="shipping-address">Address</label>
		<input class="address" type="text" name="shipping-address" id="shipping-address" />
	</fieldset>
	</div>

	<div class="block">
		<h5>Billing information</h5>
		<fieldset>
			<input type="checkbox" name="same-as-delivery" id="same-as-delivery" />
			<label id="same-label" for="same-as-delivery">Same as delivery information</label>
		</fieldset>
		<fieldset>
				<label for="billing-name">Company name <small>(not required)</small></label>
				<input type="text" name="billing-name" id="billing-name" />
		</fieldset>
		<fieldset>
			<div class="half">
				<label for="billing-postal">Zip</label>
				<input class="postal" type="text" name="billing-postal" id="billing-postal" />
			</div>
			<div class="half">
				<label for="billing-city">City</label>
				<input type="text" name="billing-city" id="billing-city" />
			</div>
		</fieldset>
		<fieldset>
			<label for="billing-address">Address</label>
			<input class="address" type="text" name="billing-address" id="billing-address" />
		</fieldset>
	</div>
	<div class="block">
		<input type="submit" value="Tovább" />
		<a href="#" class="step-back">vissza az előző lépéshez</a>
	</div>

</form>

<%= form_for "payment" do |f| %>
<div>
	<h5>Contact information</h5>
		<fieldset>
			<div class="half">
				<label for="contact-title">Titulus</label>
				<input type="text" name="contact-title" id="contact-title" />
			</div>
			<div class="half">
				<%= f.label :name %>
  			<%= f.text_field :name, :value => current_user.name %>
			</div>
			<div class="half">
				<label for="contact-lastname">Utónév</label>
				<input type="text" name="contact-lastname" id="contact-lastname" />
			</div>
		</fieldset>
		<fieldset>
			<%= f.label :email %>
			<%= f.email_field :email, :value => current_user.email %>
		</fieldset>
		<fieldset>
			<%= f.label :phone %>
			<%= f.phone_field :phone %>
		</fieldset>
</div>
<div class="block">
	<h5>Delivery information</h5>
	<fieldset>
		<% f.label :shipping_name do %>
		<%= 'Company name <small>(not required)</small>'.html_safe %>
		<% end %>
		<%= f.text_field :shipping_name, :value => "" %>
	</fieldset>
	<fieldset>
		<div class="half">
			<%= f.label :shipping_zip %>
			<%= f.text_field :shipping_zip, :value => @shipping_address.zip, :size => 4 %>
		</div>
		<div class="half">
			<%= f.label :shipping_city %>
			<%= f.text_field :shipping_city, :value => @shipping_address.city %>
		</div>
	</fieldset>
	<fieldset>
		<%= f.label :shipping_additional %>
		<%= f.text_field :shipping_additional, :value => @shipping_address.additional %>
	</fieldset>
	</div>
	<div class="block">
		<h5>Billing information</h5>
		<fieldset>
			<%= f.label "same", "Same as delivery" %>
			<%= f.check_box "same" %>
		</fieldset>
		<fieldset>
			<% f.label :billing_name do %>
				<%= 'Company name <small>(not required)</small>'.html_safe %>
			<% end %>
			<%= f.text_field :billing_name, :value => "" %>
		</fieldset>
		<fieldset>
			<div class="half">
				<%= f.label :billing_zip %>
				<%= f.text_field :billing_zip, :value => @billing_address.zip, :size => 4 %>
			</div>
			<div class="half">
				<%= f.label :billing_city %>
				<%= f.text_field :billing_city, :value => @billing_address.city %>
			</div>
		</fieldset>
		<fieldset>
			<%= f.label :billing_additional %>
			<%= f.text_field :billing_additional, :value => @billing_address.additional %>
		</fieldset>
	</div>
<% end %>