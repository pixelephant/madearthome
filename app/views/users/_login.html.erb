<div id="login-box">
	<h4>Already a member?</h4>
	<!-- ha van error ez nem látszik -->
	<p><span class="lead">log in</span> <%= logintext %></p>
	<!-- <div id="login-box"> -->
	<!-- error ha van ide bele -->
		<div class="error-box">
			<p>Nincs ilyen felhasználó. Bocsi.</p>
		</div>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <fieldset><%= f.label :email %>
		  <%= f.email_field :email, :class => "required email" %></fieldset>

		  <fieldset><%= f.label :password %>
		  <%= f.password_field :password, :class => "required" %></fieldset>

		  <% if devise_mapping.rememberable? -%>
		    <!--div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div-->
		  <% end -%>

		  <fieldset><%= f.submit "Log in" %></fieldset>

		  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  			<%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot" %>
			<% end -%>
		<% end %>
	<!-- </div> -->
</div>