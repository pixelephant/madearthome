<div class="clearfix">
	<section id="sidebar">
		<form action="#" id="filter-form" class="box">
			<h3><%= t('.filter') %></h3>
				<%= render 'home/filters' %>
		</form>
	</section>

	<section id="product-list" class="box">
		<div id="action-top">
			<%= render 'home/product_grid_action_buttons' %>

			<%= link_to t('.view_all'), request.url + "&page=all", :class => "view-all" %>
			<%= paginate @kaminari_products, :window => 2, :outer_window => 1 %>
		</div>
		<div id="product-grid">
			<%= render 'home/product_grid' %>
		</div>
		<div id="action-bottom">
			<%= render 'home/product_grid_action_buttons' %>
			<%= link_to t('.view_all'), request.url + "&page=all", :class => "view-all" %>
			<%= paginate @kaminari_products, :window => 2, :outer_window => 1 %>
		</div>
	</section>
</div>
<%= render 'home/last_viewed_carousel' if !session[:last_viewed_products].blank? %>
