<h1>Listing user_addresses</h1>

<table>
  <tr>
    <th>User</th>
    <th>Zip</th>
    <th>City</th>
    <th>Street</th>
    <th>Additional</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_addresses.each do |user_address| %>
  <tr>
    <td><%= user_address.user_id %></td>
    <td><%= user_address.zip %></td>
    <td><%= user_address.city %></td>
    <td><%= user_address.street %></td>
    <td><%= user_address.additional %></td>
    <td><%= link_to 'Show', user_address %></td>
    <td><%= link_to 'Edit', edit_user_address_path(user_address) %></td>
    <td><%= link_to 'Destroy', user_address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

