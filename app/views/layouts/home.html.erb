<body>
	<!-- Prompt IE 6 users to install Chrome Frame. Remove this if you support IE 6. chromium.org/developers/how-tos/chrome-frame-getting-started -->
	<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

<header id="main-header">
	<%= render 'home/misc_nav' %>
	<div id="header-wrapper">
		<a href="/">
			<% if params[:controller] == 'home' %>
			<h1 id="logo">
				Flairspring<span>Comfort on your side</span>
			</h1>
			<% else %>
			  <h2 id="logo">
				Flairspring<span>Comfort on your side</span>
			</h2>
			<% end %>
		</a>
		<span class="helptext">
			<em>Need help?</em> <span class="lead">call our support line</span>
			<span class="telephone">06-1-123-5432asd</span>
		</span>
		<div id="minicart-wrapper">
			<%= render 'home/minicart' %>
		</div>
		<div id="search-wrapper">
			<%= form_tag "/" + I18n.locale.to_s + "/search", :id => 'search-form', :method => :get do %>
		    <%= text_field_tag :search, params[:search], :type => 'search', :placeholder => t('search') + '...' %>
    		<%= submit_tag t('search'), :name => nil %>
			<% end %>
			<p id="search-examples"><strong>Pl.:</strong> <a href="#">accent table</a>, <a href="#">working chair</a></p>
		</div>
		<nav id="main-nav">
			<ul class="clearfix">
				<%= render 'home/categories_top' %>
			</ul>
		</nav>
		<% if params[:controller] != 'home'%>
		<nav id="breadcrumb" class="clearfix">
			<p>
				<%= render :partial => 'home/breadcrumb', :locals => {:controller => params['controller']} %>
			</p>
		</nav>
		<% end %>
	</div>
	<% if params[:controller] == 'home'%>
		<%= render 'slider' %>
	<% end %>
</header>

<div id="main-wrap">
	<%= yield %>
</div>

<section id="social-promo">
	<%= render 'home/newsletter' %>
	<%= render 'home/shops_promo' %>
</section>

